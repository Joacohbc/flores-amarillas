	// Card rotate to left if mouse enter from right and vice versa
	const card = document.querySelector('.card') as HTMLElement;
	card?.addEventListener('mouseenter', (event) => {
		const { clientX } = event as MouseEvent;
		const { left, right } = card.getBoundingClientRect();
		const isEnterFromRight = clientX > (left + right) / 2;
		card.style.transform = `rotate(${isEnterFromRight ? 1 : -1}deg)`;
		card.style.transition = 'all ease-in-out 0.3s';
		card.style.filter = 'drop-shadow(0 0 0.75rem rgb(255, 238, 0))';
		card.style.scale = '1.01';
	});

